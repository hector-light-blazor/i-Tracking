@page "/settings"
<div class="container">

<div class="row justify-content-center">

<div class="col-xl-10">

<div class="row">

<div class="col-xl-9">

    <SettingCard Id="account" Title="Account" Message="View and update your account information and settings.">
         <div class="list-group list-group-flush">
              <div class="list-group-item d-flex align-items-center">
                <div class="flex-1 text-break">
                    <div>User ID</div>
                    <div class="text-white text-opacity-50">
                        @AppState.ViewAccount.UserId
                    </div>
                </div>
            </div>
            <div class="list-group-item d-flex align-items-center">
                <div class="flex-1 text-break">
                    <div>Full Name</div>
                    <div class="text-white text-opacity-50">
                        @AppState.ViewAccount.FullName
                    </div>
                </div>
                  <div>
                    <span class="text-muted text-danger">E-mail developer to update this information</span>
                </div>
            </div>
            <div class="list-group-item d-flex align-items-center">
            <div class="flex-1 text-break">
            <div>Username</div>
            <div class="text-white text-opacity-50">
                @AppState.ViewAccount.UserName
            </div>
            </div>
            <div>
                <span class="text-muted text-danger">E-mail developer to update this information</span>
            </div>
            </div>
            <div class="list-group-item d-flex align-items-center">
                <div class="flex-1 text-break">
                    <div>Extension</div>
                    <div class="text-white text-opacity-50">
                        @AppState.ViewAccount.Extension
                    </div>
                </div>
                <div>
                    <a href="settings#modalEdit" 
                        class="btn btn-outline-default w-100px">
                        Edit
                    </a>
                </div>
            </div>
            <div class="list-group-item d-flex align-items-center">
                <div class="flex-1 text-break">
                     <div>Email address</div>
                    <div class="text-white text-opacity-50">
                        @AppState.ViewAccount.Email
                    </div>
                </div>
                <div>
                     <a href="settings#modalEdit" 
                     class="btn btn-outline-default w-100px">Edit</a>
                </div>
            </div>
             <div class="list-group-item d-flex align-items-center">
                  <div class="flex-1 text-break form-group mb-3">
                     <div>Roles</div>
                     <select @bind=@AppState.ViewAccount.Roles.RoleId class="form-select">
                        @foreach(var role in AppState.Roles)
                        {
                             <option value=@role.RoleId>@role.RoleName</option>                
                        }
                                       
                     </select>
                </div>
                <div class="">
                     <a role="button" href="settings#modalEdit" 
                     @onclick=@OnUpdateRole
                     class="btn btn-outline-default w-100px">Update</a>
                </div>
             </div>
       
        </div>
    </SettingCard>

